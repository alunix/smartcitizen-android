<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/info_window_top"
        android:minWidth="200dp"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/info_window_title"
            style="@style/InfoWindowBase"
            android:ellipsize="end"
            android:maxLines="2"
            android:scrollbars="none"
            android:singleLine="false"
            android:textSize="18sp"
            tools:text="Independence Lab Spot ola k ase" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/info_window_kit_type"
                    style="@style/InfoWindowBase"
                    android:textSize="12sp"
                    tools:text="SMARTCITIZEN KIT" />

                <TextView
                    android:id="@+id/info_window_timestamp"
                    style="@style/InfoWindowBase"
                    android:textSize="14sp"
                    tools:text="4 days ago" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_arrow_right" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/info_window_location"
        style="@style/InfoWindowBase"
        android:layout_width="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/info_window_bottom"
        android:drawableLeft="@mipmap/ic_location"
        android:drawablePadding="8dp"
        android:gravity="start"
        android:padding="12dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp"
        tools:text="78, Independence Ave SW" />

    <com.mapbox.mapboxsdk.views.TipView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="4dp" />

</LinearLayout>