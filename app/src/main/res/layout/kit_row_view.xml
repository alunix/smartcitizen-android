<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/kit_row_name"
        style="@style/AccountBaseText"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        tools:drawableLeft="@drawable/device_icon"
        tools:text="Independence Lab Spot" />

    <TextView
        android:id="@+id/kit_row_location"
        style="@style/AccountBaseText"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:drawableLeft="@mipmap/ic_location_device_view"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:textSize="17sp"
        tools:text="78, Independence Ave SW, Washington" />

    <View
        android:id="@+id/kit_row_separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:background="@color/separator" />

</LinearLayout>